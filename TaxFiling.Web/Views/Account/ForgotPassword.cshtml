@using System.Security.Claims

@model TaxFiling.Web.Models.User.ForgotPasswordViewModel

<main class="main">

    <section id="Forgot-password" class="Sign-in-section">

        <div class="container col-sm-3 shadow p-5 mb-5 bg-white rounded Sign-in-col">
            <div class="row">

                <div class=" text-black">

                    <div class="d-flex align-items-center h-custom-2 pt-xl-0 mt-xl-n5">

                        <form asp-action="ForgotPassword" method="post" style="width: 23rem;">

                            <h3 class="mb-6 pb-3 fw-bold" style="letter-spacing: 1px; text-align: center;">
                                Forgot Password
                            </h3>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="Email">Enter your registered email</label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg" id="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="pt-1 mb-4">
                                <button class="form-control btn btn-primary" type="submit">
                                    Send Reset Link
                                </button>
                            </div>

                            <p class="pb-sm-0">
                                <a asp-controller="Account" asp-action="Login" class="link-info">Back to Login</a>
                            </p>

                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-success mt-3">@ViewBag.Message</div>
                            }
                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                            }

                        </form>

                    </div>

                </div>
            </div>
        </div>

    </section>

    <div class="hero-video">
        <video id="heroVideo" src="https://v6.netexam.com/Courses6/10229/SharableResources/13949/6_19_2025_3_06_36_AM/pexels-tima-miroshnichenko-6699594.mp4"
               autoplay muted loop playsinline poster="src/img/hero/bg.jpg"></video>
    </div><!-- /Forgot Password Section -->

</main>