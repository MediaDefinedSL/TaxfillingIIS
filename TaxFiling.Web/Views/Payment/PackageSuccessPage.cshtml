@using System.Security.Claims
@model TaxFiling.Web.Models.UserTransactionViewModel



<main class="main">
    
    <div class="container mt-5 text-center">
        <div class="card shadow-lg p-4" style="border-radius: 15px;">
            <div class="mb-3">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
            </div>
            <h3 class="text-success">Payment Successful</h3>
            <p class="text-muted">Thank you! Your payment was processed successfully.</p>

            <hr />

            <div class="row text-start">
                <div class="col-md-2"><strong>Transaction ID:</strong></div>
                <div class="col-md-10">@Model.OnePayTransactionId</div>

                <div class="col-md-2"><strong>Order Number:</strong></div>
                <div class="col-md-10">@Model.OrderNumber</div>

                <div class="col-md-2"><strong>Date & Time:</strong></div>
                <div class="col-md-10">@Model.OnePayPaidOn</div>                

                <div class="col-md-2"><strong>Total Paid Amount:</strong></div>
                <div class="col-md-10">@Model.Currency @Model.TransactionAmount.ToString("N2")</div>
            </div>

            <hr />

            <div class="mt-3">
                <a href="@Url.Action("SelfOnlineDashboard", "SelfOnlineFlow")" class="btn btn-primary">Go to Dashboard</a>
                <a href="@Url.Action("DownloadReceipt", "Payment", new { orderId = Model.OrderId })" class="btn btn-outline-secondary">Download Receipt</a>
            </div>
        </div>
    </div>

</main>


