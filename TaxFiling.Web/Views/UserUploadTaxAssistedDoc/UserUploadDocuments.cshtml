    const reasonContainer = document.getElementById("reasonContainer");
    const rejectionReason = document.getElementById("rejectionReason");
    const errorReason = document.getElementById("errorReason");
    const submitVerify = document.getElementById("submitVerify");

    let activeToggle = null;

    // Event: When any "View Document" toggle is turned ON
    document.querySelectorAll('.view-toggle').forEach(toggle => {
        toggle.addEventListener('change', function () {
            if (this.checked) {
                activeToggle = this;

                // Reset modal state
                isVerifiedToggle.checked = true;
                reasonContainer.style.display = "none";
                rejectionReason.value = "";
                errorReason.style.display = "none";

                verifyModal.show();
            }
        });
    });

    // Show/hide dropdown based on "Is Verified" toggle
    isVerifiedToggle.addEventListener("change", function () {
        reasonContainer.style.display = this.checked ? "none" : "block";
        errorReason.style.display = "none";
        rejectionReason.value = "";
    });

    // Submit button validation
    submitVerify.addEventListener("click", function () {
        if (!isVerifiedToggle.checked && rejectionReason.value === "") {
            errorReason.style.display = "block";
            return;
        }

        alert("Submitted successfully!");
        verifyModal.hide();
    });

    // Hide error on dropdown selection
    rejectionReason.addEventListener("change", function () {
        if (this.value !== "") {
            errorReason.style.display = "none";
        }
    });

    // Reset modal and toggle when closed
    verifyModalEl.addEventListener('hidden.bs.modal', function () {
        if (activeToggle) {
            activeToggle.checked = false;
            activeToggle = null;
        }

        isVerifiedToggle.checked = true;
        reasonContainer.style.display = "none";
        errorReason.style.display = "none";
        rejectionReason.value = "";
    });




</script>


