                                        <div id="bankDropdown" class="dropdown"></div>
                                    </div>

                                    <!-- Bank Branch -->
                                    <div class="col-md-6">
                                        <label class="form-label">Bank Branch</label>
                                        <input type="text" id="branchInput" class="form-select" placeholder="Choose bank first" autocomplete="off" disabled />
