@model List<TaxFiling.Web.Models.SelfOnlineInvestmentPartnerBeneficiaryExemptViewModel>

<main class="main-content">

    <div class=" mt-4">
        <div class="card card-body">


            <form method="post">

                <div class=" mt-4 ">
                    <input type="hidden" id="hiddenInvestmentBeneficiaryIncomeId" name="hiddenInvestmentBeneficiaryIncomeId" />
                    <div class="p-4 border rounded bg-light shadow-sm mb-4">
                        <h6 class="mb-4 text-primary"> <i class="bi bi-cash-coin me-2"></i> Beneficiary's investment income from trust (Both local &amp; foreign)</h6>
                        <hr>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Activity Code (Trust)</label>
                                <input type="text" class="form-control" id="txtBActivityCode" name="txtBActivityCode">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Trust Name</label>
                                <input type="text" class="form-control" id="txtBTrustName" name="txtBTrustName">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">TIN of Trust</label>
                                <input type="text" class="form-control" id="txtBTINTrust" name="txtBTINTrust">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Gains and Profits (Rs.) – Trust</label>
                                <input type="number" class="form-control" id="txtBGainsProfits" name="txtBGainsProfits">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Total Investment Income from Trust</label>
                                <input type="number" class="form-control" id="txtBTotalInvestmentTrust" name="txtBTotalInvestmentTrust">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Total Investment Income</label>
                                <input type="number" class="form-control" id="txtBTotalInvestment" name="txtBTotalInvestment">
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                            </div>
                            <div class="col-md-6">
                                <div class=" align-items-right" style="text-align: right;">
                                    <button type="button" class="btn btn-primary mt-3" id="btnBeneficiaryClear">Clear</button>
                                    <button type="button" class="btn btn-primary mt-3" id="btnBeneficiarySubmit">Submit</button>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">
                        <div class="table-responsive" id="beneficiaryDetailsGrid">
                            <table class="table table-bordered table-striped mt-2">
                                <thead class="table-light">
                                    <tr>
                                        <th>No</th>
                                        <th>Total Investment</th>
                                        <th>Partnership Name</th>
                                        <th>Gains and Profits</th>
                                        <th>Total Investment Trust</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any(d => d.Category == "Beneficiary"))
                                    {
                                        var index = 0;
                                        foreach (var fdIncome in Model.Where(d => d.Category == "Beneficiary"))
                                        {
                                            <tr>
                                                <td>@(++index)</td>
                                                <td>@fdIncome.TotalInvestmentIncome</td>
                                                <td>@fdIncome.TrustName</td>
                                                <td>@fdIncome.GainsProfits</td>
                                                <td>@fdIncome.TotalInvestmentIncomeTrust</td>
                                                <td>
                                                    <button class="btn btn-primary btn-sm beneficiaryDetails-editbtn" type="button"
                                                            data-id="@fdIncome.InvestmentIncomePBEId"
                                                            data-category="Beneficiary"
                                                            data-total="@fdIncome.TotalInvestmentIncome"
                                                            data-code="@fdIncome.ActivityCode"
                                                            data-trustname="@fdIncome.TrustName"
                                                            data-btin="@fdIncome.TINNO"
                                                            data-gains="@fdIncome.GainsProfits"
                                                            data-totaltrust="@fdIncome.TotalInvestmentIncomeTrust">

                                                        Edit
                                                    </button>
                                                    <button class="btn btn-danger btn-sm PartnerBeneficiaryExemptDetails-deletebtn" type="button"
                                                            data-id="@fdIncome.InvestmentIncomePBEId"
                                                            data-name="Beneficiary">
                                                        Delete
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center">No FixedDeposit Income found.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </form>
            <br><br>
            <div class="d-lg-flex justify-content-between">
                <div class="col-lg-6 col-md-6 btn-prv">
                    <button class="btn btn-primary btn-lg" id="linkPartnerDetailsContinue">
                        Back
                    </button>
                </div>
                <div class="col-lg-6 col-md-6 right next-btn" id="linkExemptContinue">
                    <button class="btn btn-primary btn-lg">
                        Continue
                    </button>
                </div>
            </div>
        </div>

    </div>

</main>

<script src="~/scripts/selfOnline.investmentpartnerbeneficiaryexempt.js" asp-append-version="true"></script>
