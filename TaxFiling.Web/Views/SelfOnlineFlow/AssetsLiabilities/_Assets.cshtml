@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@using System.Security.Claims
@using Microsoft.AspNetCore.Html
@model TaxFiling.Web.Models.SelfOnlineAssets

<link href="~/assets/css/tree-container-css.css?v=3" rel="stylesheet">

<main class="main-content">

    <div class=" mt-4">
        <div class="card card-body">
            <form method="post">
                <div class=" mt-4 ">
                    <div class="custom-tabs">
                        <ul class="nav nav-tabs col-md-12" id="myAssetsTab" role="tablist">
                            <li class="nav-item col-md-2" role="presentation">
                                <button class="nav-link immovable_properties active" id="immovableproperties-tab" data-bs-toggle="tab" data-bs-target="#immovableproperties" type="button" role="tab" aria-controls="immovableproperties" aria-selected="true" data-target="bank-section">Immovable Properties</button>
                            </li>
                            <li class="nav-item col-md-2" role="presentation">
                                <button class="nav-link motor_vehicle" id="motorvehicle-tab" data-bs-toggle="tab" data-bs-target="#motorvehicle" type="button" role="tab" aria-controls="motorvehicle" aria-selected="false" tabindex="-1">Motor Vehicle</button>
                            </li>
                            <li class="nav-item col-md-2" role="presentation">
                                <button class="nav-link bank_balances" id="bankbalances-tab" data-bs-toggle="tab" data-bs-target="#bankbalances" type="button" role="tab" aria-controls="bankbalances" aria-selected="false" tabindex="-1">Bank Balances</button>
                            </li>
                            <li class="nav-item col-md-2" role="presentation">
                                <button class="nav-link shares_stocks_securities" id="sharesstockssecurities-tab" data-bs-toggle="tab" data-bs-target="#sharesstockssecurities" type="button" role="tab" aria-controls="sharesstockssecurities" aria-selected="false" tabindex="-1">
                                    Shares/Stocks/Securities
                                </button>
                            </li>

                            <li class="nav-item col-md-2" role="presentation">
                                <button class="nav-link expenses_balances" id="expensesbalances-tab" data-bs-toggle="tab" data-bs-target="#expensesbalances" type="button" role="tab" aria-controls="expensesbalances" aria-selected="false" tabindex="-1">Expenses & Balances</button>
                            </li>
                            <li class="nav-item col-md-2" role="presentation">
                                <button class="nav-link declare_capital" id="declarecapital-tab" data-bs-toggle="tab" data-bs-target="#declarecapital" type="button" role="tab" aria-controls="declarecapital" aria-selected="false" tabindex="-1">Declare the Capital</button>
                            </li>
                        </ul>
                        <div class="tab-content" id="myAssetsTabContent">
                         @*    Immovable Properties *@

                            <div aria-labelledby="immovableproperties-tab" role="tabpanel" id="immovableproperties" class="tab-pane insvesment fade fade-in active show">
                               
                                <h4 class="mb-3">
                                    <i class="bi bi-building"></i> &nbsp;Immovable Properties
                                </h4>
                                <hr>
                                <input type="hidden" id="hiddenSelfonlinePropertyId" name="hiddenSelfonlinePropertyId" value=""/> 
                                <div class="row mb-2">
                                    <div class="col-3">Type</div>
                                    <div class="col-5">
                                        <select class="form-select" id="ddlImmovablePropertiesType" name="ddlImmovablePropertiesType">
                                            <option value="">-- Select Type --</option>
                                            <option value="Local">Local</option>
                                            <option value="Foreign">Foreign</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">S/N</div>
                                    <div class="col-5">
                                        <input type="text" id="txtImmPropertiesSN" class="form-control" />
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">Situation of property</div>
                                    <div class="col-5">
                                        <input type="text" id="txtImmPropertiesSituation" class="form-control" />
                                    </div>
                                </div>
                               
                                <div class="row mb-2">
                                    <div class="col-3">Date of Acquisition</div>
                                    <div class="col-5">
                                        <input type="date" id="txtImmPropertiesDate" class="form-control" />
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">Cost (Rs.)</div>
                                    <div class="col-5">
                                        <input type="text" step="0.01" id="txtImmPropertiesCost" class="form-control" />
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">Market value (Rs.)</div>
                                    <div class="col-5">
                                        <input type="text" step="0.01" id="txtImmPropertiesMarketValue" class="form-control" />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                    </div>
                                    <div class="col-md-6">
                                        <div class=" align-items-right" style="text-align: right;">
                                            <button type="button" class="btn btn-primary mt-3" id="btnImmovablePropertiesSubmit">Submit</button>
                                        </div>
                                    </div>
                                </div>

                                <hr class="my-4">

                                <div class="table-responsive" id="ImmovablePropertiesGrid">
                                    <table class="table table-bordered table-striped mt-2">
                                        <thead class="table-light">
                                            <tr>
                                                <th>No</th>
                                                <th>Type</th>
                                                <th>S/N</th>
                                                <th>Situation Property</th>
                                                <th>Date Acquisition  </th>
                                                <th>Cost</th>
                                                <th>Market value</th>
                                                <th>Action</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.selfonlineAssetsImmovablePropertyViewModel != null && Model.selfonlineAssetsImmovablePropertyViewModel.Any())
                                            {
                                                var index = 0;
                                                foreach (var immovableProperties in Model.selfonlineAssetsImmovablePropertyViewModel)
                                                {
                                                    <tr>
                                                        <td>@(++index)</td>
                                                        <td>@immovableProperties.Type</td>
                                                        <td>@immovableProperties.SerialNumber</td>
                                                        <td>@immovableProperties.Situation</td>   <!-- fixed -->
                                                        <td>@immovableProperties.DateOfAcquisition?.ToString("yyyy-MM-dd")</td>
                                                        <td>@immovableProperties.Cost?.ToString("N2")</td>
                                                        <td>@immovableProperties.MarketValue?.ToString("N2")</td>
                                                        <td>
                                                            <button class="btn btn-primary btn-sm edit-btn" data-id="@immovableProperties.SelfonlinePropertyID">Edit</button>
                                                            <button class="btn btn-danger btn-sm delete-btn" data-id="@immovableProperties.SelfonlinePropertyID">Delete</button>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="8" class="text-center">No immovable properties found.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>


                            </div>

                            @*    Motor Vehicle *@

                            <div aria-labelledby="motorvehicle-tab" role="tabpanel" id="motorvehicle" class="tab-pane insvesment fade">
                                
                                <h4 class="mb-3">
                                    <i class="bi bi-truck"></i> &nbsp; Motor Vehicle
                                </h4>
                                <hr>
                                <div class="row mb-2">
                                    <div class="col-3">Type</div>
                                    <div class="col-5">
                                        <select class="form-select" id="ddlMType" name="ddlMType">
                                            <option value="">-- Select Type --</option>
                                            <option value="Local">Local</option>
                                            <option value="Foreign">Foreign</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">S/N</div>
                                    <div class="col-5">
                                        <input type="text" id="txtMotorVehicleSN" name="txtMotorVehicleSN" class="form-control" />
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">Description</div>
                                    <div class="col-5">
                                        <input type="text" id="txtMotorVehicleDescription" name="txtMotorVehicleDescription" class="form-control" />
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">Registration No.</div>
                                    <div class="col-5">
                                        <input type="text" id="txtMotorVehicleRegNo" name="txtMotorVehicleRegNo" class="form-control" />
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">Date of acquisition</div>
                                    <div class="col-5">
                                        <input type="date" id="txtMotorVehicleDate" name="txtMotorVehicleDate" class="form-control" />
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">Cost/Market value (Rs.)</div>
                                    <div class="col-5">
                                        <input type="number" step="0.01" id="txtMotorVehicleValue" name="txtMotorVehicleValue" class="form-control" />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                    </div>
                                    <div class="col-md-6">
                                        <div class=" align-items-right" style="text-align: right;">
                                            <button type="button" class="btn btn-primary mt-3" id="btnMotorVehicleSubmit">Submit</button>
                                        </div>
                                    </div>
                                </div>

                                <hr class="my-4">

                                <div class="table-responsive" id="MotorVehicleGrid">
                                    <table class="table table-bordered table-striped mt-2">
                                        <thead class="table-light">
                                            <tr>
                                                <th>No</th>
                                                <th>Type</th>
                                                <th>S/N</th>
                                                <th>Registration No</th>
                                                <th>Date Acquisition</th>
                                                <th>Cost/Market Value</th>
                                                <th>Action</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.selfonlineAssetsMotorVehicleViewModel != null && Model.selfonlineAssetsMotorVehicleViewModel.Any())
                                            {
                                                var index = 0;
                                                foreach (var motorVehicle in Model.selfonlineAssetsMotorVehicleViewModel)
                                                {
                                                    <tr>
                                                        <td>@(++index)</td>
                                                        <td>@motorVehicle.Type</td>
                                                        <td>@motorVehicle.SerialNumber</td>
                                                        <td>@motorVehicle.RegistrationNo</td>  
                                                        <td>@motorVehicle.DateOfAcquisition?.ToString("yyyy-MM-dd")</td>
                                                        <td>@motorVehicle.CostMarketValue?.ToString("N2")</td>
                                                        <td>
                                                            <button class="btn btn-primary btn-sm edit-btn" data-id="@motorVehicle.SelfonlineMotorVehicleID">Edit</button>
                                                            <button class="btn btn-danger btn-sm delete-btn" data-id="@motorVehicle.SelfonlineMotorVehicleID">Delete</button>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="8" class="text-center">No immovable properties found.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>

                            @*    Bank Balances *@

                            <div aria-labelledby="bankbalances-tab" role="tabpanel" id="bankbalances" class="tab-pane insvesment fade">
                                
                                <h4 class="mb-3">
                                    <i class="bi bi-bank"></i> &nbsp; Bank Balances Including Term Deposits as at 31.03.2025
                                </h4>
                                <hr>
                            </div>

                            @*   Shares/stocks/securities *@

                            <div aria-labelledby="sharesstockssecurities-tab" role="tabpanel" id="sharesstockssecurities" class="tab-pane insvesment fade">
                              
                                <h4 class="mb-3">
                                    <i class="bi bi-graph-up"></i> &nbsp; Shares/Stocks/Securities as at 31.03.2025
                                </h4>
                                <hr>
                            </div>

                            @*     Expenses and Balances *@

                            <div aria-labelledby="expensesbalances-tab" role="tabpanel" id="expensesbalances" class="tab-pane insvesment fade">
                              
                                <h4 class="mb-3">
                                    <i class="bi bi-cash-stack"></i> &nbsp; Expenses and Balances
                                </h4>
                                <hr>
                            </div>

                            @*     Declare the Capital *@

                            <div aria-labelledby="declarecapital-tab" role="tabpanel" id="declarecapital" class="tab-pane insvesment fade">
                               
                                <h4 class="mb-3">
                                    <i class="bi bi-briefcase"></i> &nbsp; Declare the Capital and Current Account (credit) Balances Held as a Part of Business, as at 31.03.2025
                                </h4>
                                <hr>
                            </div>

                        </div>
                    </div>
                </div>

            </form>
            <br><br>
            <div class="d-lg-flex justify-content-between">
                <div class="col-lg-6 col-md-6 btn-prv">
                    <button class="btn btn-primary btn-lg" id="linContinue">
                        Back
                    </button>
                </div>
                <div class="col-lg-6 col-md-6 right next-btn" id="linkContinue">
                    <button class="btn btn-primary btn-lg">
                        Continue
                    </button>
                </div>
            </div>
        </div>

    </div>

</main>

<script src="~/scripts/selfOnline.assets.js" asp-append-version="true"></script>
                