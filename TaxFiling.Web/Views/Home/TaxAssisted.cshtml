@using System.Security.Claims
@using Microsoft.AspNetCore.Html
@model List<TaxFiling.Web.Models.PackagesViewModel>
@using System.Globalization
@{
      var userName = User.FindFirst(ClaimTypes.Name)?.Value;
      var  userId = User.Claims.FirstOrDefault(mbox => mbox.Type == "UserID")?.Value;
      bool isAuthenticated = !string.IsNullOrEmpty(userId);  
    var activePackageIdClaim = User.FindFirst("PackageId")?.Value;
    int? activePackageId = string.IsNullOrEmpty(activePackageIdClaim) ? (int?)null : int.Parse(activePackageIdClaim);
    var formattedName = userName != null ? CultureInfo.CurrentCulture.TextInfo.ToTitleCase(userName.ToLower()) : "";
}


@functions {
    public IHtmlContent PayNowButton(string packageName, int packageId, bool isAuthenticated, int? activePackageId, bool isActivePayment)
    {
        if (!isAuthenticated)
        {
            // User not logged in → redirect to login
            string returnUrl = $"/Payment/PackagePayment?packageId={packageId}";
            return new HtmlString($@"<a class='btn btn-primary' href='/Account/Login?returnUrl={returnUrl}'>Pay Now</a>");
        }

        if (isActivePayment && activePackageId.HasValue)
        {
            if (activePackageId.Value == packageId)
            {
                // This is the package already paid
                return new HtmlString(@"<button class='btn btn-success' disabled>Already Paid</button>");
            }
            else
            {
                // Other packages are locked
                return new HtmlString(@"<button class='btn btn-secondary' disabled>Pay Now</button>");
            }
        }

        // Not yet paid → show Pay Now button
        return new HtmlString($@"<a class='btn btn-primary' href='/Payment/PackagePayment?packageId={packageId}'>Pay Now</a>");
    }
}

<main class="main">

    <!-- Page Title -->
    <div class="page-title accent-background" >
        <div class="container d-lg-flex justify-content-between align-items-center">
            <div class="col-lg-4 col-md-6">
                <h2 class="mb-2 mb-lg-0 font-weight-bold">Assisted Filing</h2></br>
                <h1 class="mb-2 mb-lg-0" style="display:@(string.IsNullOrEmpty(userId) ? "none" : "block");">Welcome <span>@formattedName</span></h1>
            </div>
            <div class="col-lg-2 col-md-4">
                <nav class="breadcrumbs">
                    <ol>
                        @* <li><a href="index.html">Home</a></li>
                        <li class="current">Assisted Filing</li> *@
                    </ol>
                </nav>
            </div>
        </div>
    </div><!-- End Page Title -->
    <!-- File my taxes Section -->
    <section id="File-my-taxes" class="blog-posts section package">

        <div class="container">
            <div class="row gy-4">
                <input type="hidden" name="UserId" id="UserId" value=@userId />
                <h2 class="mb-2 mb-lg-0 font-weight-bold text-center body-header ">
                    Pick your package.</h4>
                    
                    <p style="text-align: center;">We prepare, review, and file your return – including document uploading, IRD handling, and professional review</p>
                    <br>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var packageses in Model)
                        {
                            <div class="col-lg-4 aos-init aos-animates" data-aos="fade-up" data-aos-delay="100">
                                <article class="position-relative h-100 rounded-md">

                                    <div class="post-img position-relative overflow-hidden rounded-md-image">
                                        <img src="@packageses.ImageUrl" class="img-fluid rounded-md-image" alt="">
                                        <span class="post-date"><span>@packageses.Curancy</span> @packageses.Price.ToString("N2")</span>
                                    </div>

                                    <div class="post-content d-flex flex-column">

                                        <h3 class="post-title">
                                            @packageses.Name
                                        </h3>

                                        <div class="meta d-flex align-items-center d-none">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-person"></i> <span class="ps-2">John Doe</span>
                                            </div>
                                            <span class="px-3 text-black-50">/</span>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-folder2"></i> <span class="ps-2">Politics</span>
                                            </div>
                                        </div>
                                        @Html.Raw(packageses.Description)


                                        <hr>
                                        @{
                                           
                                            bool isActivePayment = false;

                                            if (isAuthenticated)
                                            {
                                                var claimValue = User.FindFirst("IsActivePayment")?.Value;
                                                isActivePayment = claimValue == "1"; // or true if stored as bool
                                            }
                                        }                                        

                                        @*  <button type="button" class="btn btn-primary" id="btnSelfEmployed">Pay Now</button> *@
                                        @PayNowButton("TaxAssisted", @packageses.PackagesId, isAuthenticated, activePackageId, isActivePayment)

                                    </div>

                                </article>
                            </div>

                            <!-- End File my taxes item -->
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <p>No taxpayers found.</p>
                        </div>
                    }


            </div>
        </div>

    </section>
    <!-- /File my taxes -->

</main>
<script>
     window.addEventListener("pageshow", function () {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });
</script>
