<main class="main">

    <!-- Page Title -->
    <div class="page-title accent-background">
        <div class="container d-lg-flex justify-content-between align-items-center">
            <div class="col-lg-4 col-md-6">
                <h2 class="mb-lg-0 font-weight-bold">Tax Calculator</h2></br>
            </div>
            <div class="col-lg-2 col-md-4">
                <nav class="breadcrumbs">
                    <ol>
                       @*  <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="current">Tax Calculator</li> *@
                    </ol>
                </nav>
            </div>
        </div>
    </div><!-- End Page Title -->
    <!-- Sign in Section -->
    <section id="register" class="register-section">


        <div class="container shadow p-3 mb-5 bg-white rounded">
            <div class="row">
                <div class="col-sm-6 text-black">

                    <div class="d-flex align-items-center h-custom-2  pt-xl-0 mt-xl-n5">

                        <form style="width: 23rem;">

                            <h5 class=" mb-6 pb-3 fw-bold" style="letter-spacing: 1px;">
                                Add details here</h5>

                                <div data-mdb-input-init="" class="form-outline mb-4">
                                    <label class="form-label" for="form2Example18">Province</label>
                                    <input type="email" id="form2Example18" class="form-control form-control-lg">

                                </div>
                                <div data-mdb-input-init="" class="form-outline mb-4">
                                    <label class="form-label" for="form2Example18">Employment Income</label>
                                    <input type="email" id="form2Example18" class="form-control form-control-lg">

                                </div>
                                <div data-mdb-input-init="" class="form-outline mb-4">
                                    <label class="form-label" for="form2Example18">Taxes Paid</label>
                                    <input type="email" id="form2Example18" class="form-control form-control-lg">

                                </div>
                                <div data-mdb-input-init="" class="form-outline mb-4">
                                    <label class="form-label" for="form2Example18">RRSP Contributions</label>
                                    <input type="email" id="form2Example18" class="form-control form-control-lg">

                                </div>


                                <div class="pt-1 mb-4">
                                    <button data-mdb-button-init="" data-mdb-ripple-init="" class=" form-control btn btn-primary" type="button">Calculate</button>
                                </div>


                        </form>

                    </div>

                </div>
                <div class="col-sm-6 px-0 d-none d-sm-block">
                    <img src="~/assets/img/tax-cal.png" class="img-fluid w-100 vh-100" alt="Login image"  style="object-fit: cover; object-position: left;">
                </div>
            </div>
        </div>


    </section><!-- /Sign in Section -->

</main>
