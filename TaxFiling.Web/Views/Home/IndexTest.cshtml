@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8 bg-white shadow rounded p-4 d-flex flex-wrap align-items-center">
            <div class="col-md-6 text-center">
                <img src="~/images/login-illustration.png" alt="Login Illustration" class="img-fluid" />
            </div>
            <div class="col-md-6">
                <h4 class="mb-4">Sign in to your Universal account</h4>

                <form method="post" action="/Account/Login">
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email address</label>
                        <input type="email" name="Email" class="form-control" id="Email" required />
                    </div>
                    <div class="mb-3">
                        <label for="Password" class="form-label">Password</label>
                        <input type="password" name="Password" class="form-control" id="Password" required />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>

                <div class="mt-3">
                    <a href="/Account/ForgotPassword">I forgot my username or password</a><br />
                    <a href="/Account/Register">I'm new. I want to create an account</a>
                </div>
            </div>
        </div>
    </div>
</div>
