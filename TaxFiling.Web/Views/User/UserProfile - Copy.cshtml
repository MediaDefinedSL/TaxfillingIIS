@model TaxFiling.Web.Models.User.UserViewModel

<main class="main">
    <!-- Page Title -->
    <div class="page-title accent-background">
        <div class="container d-lg-flex justify-content-between align-items-center">
            <div class="col-lg-4 col-md-6">
                <h2 class="mb-2 mb-lg-0 font-weight-bold">User Profile</h2></br>
                <h1 class="mb-2 mb-lg-0">Welcome <span>@Model.FirstName  @Model.LastName</span></h1>
            </div>
            <div class="col-lg-2 col-md-4">
                <nav class="breadcrumbs">
                    <ol>
                        @* <li class="current"></li> *@
                    </ol>
                </nav>
            </div>
        </div>
    </div><!-- End Page Title -->

    <section id="register" class="register-section">
        <div class="container shadow p-5 mb-5 bg-white rounded">
            <div class="row">

                <div class="col-sm-6 px-0 d-none d-sm-block">

                    <div class="form-group">
                        <label for="ProfileImage">Profile Image</label>
                        <div class="file-upload" id="fileUpload">
                            <input type="file" id="ProfileImage" name="ProfileImage" accept=".jpg,.jpeg,.png,.gif" style="display: none;">
                            <p>Click here or drag and drop your profile image</p>
                            <p style="font-size: 12px; color: #666;">Maximum file size: 5MB. Supported formats: JPG, JPEG, PNG, GIF</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                        {
                            <img src="@Url.Content(Model.ProfileImagePath)" alt="Profile Image" width="120" />
                        }
                        <div class="preview-container" id="previewContainer" style="display: none;">
                            <img id="previewImage" class="preview-image" alt="Preview">
                            <p><button type="button" onclick="removeImage()">Remove Image</button></p>
                        </div>
                        <div class="error-message" id="ProfileImageError"></div>
                    </div>


                    <img src="~/assets/img/online-registration-illustration.png" class="img-fluid" alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">

                

                </div>
                <div class="col-sm-6 text-black">

                    <div class="d-flex align-items-center h-custom-2  pt-xl-0 mt-xl-n5 float-right">

                        <form style="width: 23rem;" enctype="multipart/form-data" method="post">

                            <h5 class=" mb-6 pb-3 fw-bold" style="letter-spacing: 1px;">
                                Get your taxes started
                            </h5>

                            <div data-mdb-input-init="" class="form-outline mb-4">
                                <span class="text-danger"> *</span>
                                <label class="form-label" for="form2Example18">First Name</label>
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control form-control-lg" })
                            </div>
                            <div data-mdb-input-init="" class="form-outline mb-4">
                                <span class="text-danger"> *</span>
                                <label class="form-label" for="form2Example18">Last name</label>
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-control-lg" })
                            </div>
                            <div data-mdb-input-init="" class="form-outline mb-4">
                                <span class="text-danger"> *</span>
                                <label class="form-label" for="form2Example18">Email address</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg" })

                            </div>
                            <div data-mdb-input-init="" class="form-outline mb-4">
                                <span class="text-danger"> *</span>
                                <label class="form-label" for="form2Example18">Phone Number</label>
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control form-control-lg" })
                            </div>
                            <div data-mdb-input-init="" class="form-outline mb-4">
                                <div class=" row col-sm-12 ">
                                    

                                <label class="form-label" for="form2Example18">Password</label>
                                    <div class="form-outline col-sm-7 ">
                                @Html.Password("Password", "Hardcoded123", new { @class = "form-control form-control-lg" })
                                </div>
                                    <div class="form-outline col-sm-5 ">
                                        <button type="button" class="btn btn-primary  btn-sm" style="height: 46px;" id="btnReset">
                                    Reset Password
                                </button>
                                </div>
                                </div>
                            </div>
                            <div data-mdb-input-init="" class="form-outline mb-4">
                                <span class="text-danger"> *</span>
                                <label class="form-label" for="form2Example28">NIC Number</label>
                                @Html.TextBoxFor(m => m.NICNO, new { @class = "form-control form-control-lg" })

                            </div>
                            <div data-mdb-input-init="" class="form-outline mb-4">
                                <span class="text-danger"> *</span>
                                <label class="form-label" for="form2Example28">Tin Number</label>
                                @Html.TextBoxFor(m => m.TinNo, new { @class = "form-control form-control-lg" })

                            </div>

                            <div class="pt-1 mb-4">
                                <button data-mdb-button-init="" data-mdb-ripple-init="" class=" form-control btn btn-primary" type="button"><a id="btnUpdateUser" class="d-block">Register</a></button>
                            </div>
                            <input type="hidden" name="UserId" id="UserId" value="@Model.UserId" />
                            <input type="hidden" name="isTin" id="isTin" value="@Model.IsTin" />
                            <input type="hidden" name="UserFullName" id="UserFullName" value="@ViewBag.UserFullName" />

                        </form>

                    </div>

                </div>
            </div>
        </div>


    </section><!-- /Sign in Section -->

</main>

<!-- Modal: File My Taxes -->
<div class="modal fade" id="File-my-taxes" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header d-block">
                <h5 class="modal-title text-center" id="exampleModalLabel">
                    <b>Are you a <span class="color-tax-blue">TIN</span> Member?</b>
                </h5>
            </div>

            <div class="modal-body text-center">
                <button type="button" class="btn btn-primary me-md-2" id="btnUserTinYesStatus">Yes</button>
                <button type="button" class="btn btn-primary" id="btnUserTinNoStatus">No</button>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">Reset Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body px-4">
                <form id="resetPasswordForm">
                    <input type="hidden" id="resetUserId" name="userId" />

                    <div class="form-group mb-3">
                        <label>New Password</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword"
                               placeholder="Enter New Password" required>

                    </div>

                    <div class="form-group mb-3">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                               placeholder="Confirm Password" required>

                    </div>

                    <div class="d-flex justify-content-center gap-2 mb-3">
                        <button type="submit" class="btn btn-primary px-4">Reset Password <i class="bi bi-check2"></i></button>
                        <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancel <i class="bi bi-x"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/scripts/user.js" asp-append-version="true"></script>