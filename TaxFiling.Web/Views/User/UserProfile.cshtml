@model TaxFiling.Web.Models.User.UserViewModel
@using System.Security.Claims
@inject IConfiguration Configuration

@{
    var userId = "";
    var isActivePayment = "0";
    var profileImageUrl = "";

    // var profileImageUrl = "/UserImages/a2b6c0ba-878d-49ee-91d2-a6250ff9632c/17146853.png";
    string baseApiUrl = Configuration.GetValue<string>("BaseAPIUrl") ?? "";


    try
    {
        var userName = User.FindFirst(ClaimTypes.Name)?.Value;
        userId = User.Claims.FirstOrDefault(mbox => mbox.Type == "UserID")?.Value;
        isActivePayment = User.Claims.FirstOrDefault(mbox => mbox.Type == "IsActivePayment")?.Value;
        profileImageUrl = User.Claims.FirstOrDefault(mbox => mbox.Type == "ProfileImagePath")?.Value;
    }
    catch (Exception ex)
    {
        var aa = ex.Message;
    }

    
}

<main class="main">
    <!-- Page Title -->
    <div class="page-title accent-background">
        <div class="container d-lg-flex justify-content-between align-items-center">
            <div class="col-lg-4 col-md-6">
                <h2 class="mb-2 mb-lg-0 font-weight-bold">User Profile</h2></br>
                <h1 class="mb-2 mb-lg-0">Welcome <span>@Model.FirstName  @Model.LastName</span></h1>
            </div>
            <div class="col-lg-2 col-md-4">
                <nav class="breadcrumbs">
                    <ol>
                        @* <li class="current"></li> *@
                    </ol>
                </nav>
            </div>
        </div>
    </div><!-- End Page Title -->

    <section id="register" class="register-section profile">
        <div class="container shadow p-5 mb-5 bg-white rounded">
            <div class="row">

                <div class="col-sm-3 px-0  d-sm-block">
                    <div class="d-flex justify-content-center mb-4">
                        <img id="selectedAvatar"
                             src="@(!string.IsNullOrEmpty(Model.ProfileImagePath) ? Url.Content(Model.ProfileImagePath) : "https://mdbootstrap.com/img/Photos/Others/placeholder-avatar.jpg")"
                             class="rounded-circle"
                             alt="Profile Image"
                             style="width: 120px; height: 120px; object-fit: cover;" />
                    </div>
                    <div class="d-flex justify-content-center">
                        <div data-mdb-ripple-init class="btn btn-primary btn-rounded mb-4">
                            <label class="form-label text-white m-1" for="customFile2">Choose file</label>
                           
                            <input type="file" class="form-control d-none" id="customFile2" onchange="displaySelectedImage(event, 'selectedAvatar')" />
                        </div>

                    </div>

                    <div class="alert alert-secondary" role="alert">
                        Maximum file size: 5MB. Supported formats: JPG, JPEG, PNG, GIF.
                    </div><br>
                    <div class="alert alert-danger" role="alert" style="display: none;">
                        This is a danger alert with <a href="#" class="alert-link">an example link</a>. Give it a click if you like.
                    </div>

                </div>
                <div class="col-sm-9 text-black">

                    <div class=" align-items-center h-custom-2  pt-xl-0 mt-xl-n5 ">

                        <form  enctype="multipart/form-data" method="post">

                            <h5 class=" mb-6 pb-3 fw-bold" style="letter-spacing: 1px;">
                                Get your taxes started
                            </h5>

                            <div data-mdb-input-init="" class="form-outline mb-4 col-sm-4 mr-10">
                                <span class="text-danger"> *</span>
                                <label class="form-label" for="form2Example18">First Name</label>
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control form-control-lg" })
                            </div>
                            <div data-mdb-input-init="" class="form-outline mb-4 col-sm-4 mr-10">
                                <span class="text-danger"> *</span>
                                <label class="form-label" for="form2Example18">Last name</label>
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-control-lg" })
                            </div>
                            <div data-mdb-input-init="" class="form-outline mb-4 col-sm-4 mr-10">
                                <span class="text-danger"> *</span>
                                <label class="form-label" for="form2Example18">Email address</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg" })

                            </div>
                            <div data-mdb-input-init="" class="form-outline mb-4 col-sm-4 mr-10">
                                <span class="text-danger"> *</span>
                                <label class="form-label" for="form2Example18">Phone Number</label>
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control form-control-lg" })
                            </div>
                            <div data-mdb-input-init="" class="form-outline mb-4 col-sm-4 mr-10">
                                <div class=" row col-sm-12 ">


                                    <label class="form-label" for="form2Example18">Password</label>
                                    <div class="form-outline col-sm-7 ">
                                        @Html.Password("Password", "Hardcoded123", new { @class = "form-control form-control-lg" })
                                    </div>
                                    <div class="form-outline col-sm-5 ">
                                        <button type="button" class="btn btn-primary  btn-sm" style="height: 46px;" id="btnReset">
                                            Reset Password
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div data-mdb-input-init="" class="form-outline mb-4 col-sm-4 mr-10">
                                <span class="text-danger"> *</span>
                                <label class="form-label" for="form2Example28">NIC Number</label>
                                @Html.TextBoxFor(m => m.NICNO, new { @class = "form-control form-control-lg" })

                            </div>
                            <div data-mdb-input-init="" class="form-outline mb-4 col-sm-4 mr-10">
                                <span class="text-danger"> *</span>
                                <label class="form-label" for="form2Example28">TIN Number</label>
                                @Html.TextBoxFor(m => m.TinNo, new { @class = "form-control form-control-lg" })

                            </div>

                            <div class="pt-1 mb-4 col-sm-4">
                                <button data-mdb-button-init="" data-mdb-ripple-init="" class=" form-control btn btn-primary" type="button"><a id="btnUpdateUser" class="d-block">Register</a></button>
                            </div>
                            <input type="hidden" name="UserId" id="UserId" value="@Model.UserId" />
                            <input type="hidden" name="isTin" id="isTin" value="@Model.IsTin" />
                            <input type="hidden" name="UserFullName" id="UserFullName" value="@ViewBag.UserFullName" />
                            <input type="hidden" name="BeforeProfileImagePath" id="BeforeProfileImagePath" value="@Model.ProfileImagePath" />

                        </form>

                    </div>

                </div>
            </div>
        </div>


    </section><!-- /Sign in Section -->

</main>

<!-- Modal: File My Taxes -->
<div class="modal fade" id="File-my-taxes" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header d-block">
                <h5 class="modal-title text-center" id="exampleModalLabel">
                    <b>Are you a <span class="color-tax-blue">TIN</span> Member?</b>
                </h5>
            </div>

            <div class="modal-body text-center">
                <button type="button" class="btn btn-primary me-md-2" id="btnUserTinYesStatus">Yes</button>
                <button type="button" class="btn btn-primary" id="btnUserTinNoStatus">No</button>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">Reset Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body px-4">
                <form id="resetPasswordForm">
                    <input type="hidden" id="resetUserId" name="userId" />

                    <div class="form-group mb-3">
                        <label>New Password</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword"
                               placeholder="Enter New Password" required>

                    </div>

                    <div class="form-group mb-3">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                               placeholder="Confirm Password" required>

                    </div>

                    <div class="d-flex justify-content-center gap-2 mb-3">
                        <button type="submit" class="btn btn-primary px-4">Reset Password <i class="bi bi-check2"></i></button>
                        <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancel <i class="bi bi-x"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/scripts/user.js" asp-append-version="true"></script>