<script>
    $(function () {

       
        $(document).on("click", "#btnLogout", function (e) {
            e.preventDefault();

            $.ajax({
                url: `${appUrl}/Account/Logout`,
                type: "POST",
                success: function () {
                    window.location.href = `${appUrl}/Account/Login`;
                },
                error: function (xhr) {
                    console.log("Logout failed:", xhr);
                }
            });
        });
    });

</script>
